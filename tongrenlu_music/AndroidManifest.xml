<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.tongrenlu.android.music"
    android:versionCode="3"
    android:versionName="Tongrenlu / 1.0.3" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application android:name="TongrenluApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:theme="@style/AppBaseTheme">
        
        <activity android:name="MainActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="MusicInfoActivity" 
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="MusicPlayerActivity"
            android:launchMode="singleInstance" 
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="SettingsActivity" >
        </activity>
        <service android:name="MusicService"></service>
        <service android:name="DownloadService"></service>
        <service android:name="UpdateService"></service>
        <provider android:name=".provider.DataProvider"
            android:authorities="info.tongrenlu.android.music.provider"
            android:exported="false"></provider>
    </application>

</manifest>