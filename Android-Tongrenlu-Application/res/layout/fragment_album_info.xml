<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99000000"
        android:paddingBottom="8dp"
        >
	    <ImageView android:id="@+id/article_cover"
	        android:layout_width="@dimen/album_thumb_size"
	        android:layout_height="@dimen/album_thumb_size"
	        android:layout_marginRight="8dp"
	        android:src="@drawable/default_cover"
	        android:contentDescription="@string/article_cover"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        />
        <TextView
            android:id="@+id/article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="@string/article_title"
            android:textSize="@dimen/album_title_size"
            android:layout_alignTop="@+id/article_cover"
            android:layout_toRightOf="@+id/article_cover"
            style="@style/WhiteText"
            />
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/article_cover"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true">
            <Button
                android:id="@+id/action_play_all"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/action_play_all"
                style="@style/transparentButton"
                />
	        <Button
	            android:id="@+id/action_download_all"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:text="@string/action_download_all"
                style="@style/transparentButton"
	            />
        </LinearLayout>
    </RelativeLayout>
    <include layout="@layout/fragment_expandable_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>
